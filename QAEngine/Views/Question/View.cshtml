@using QAEngine.Models.ThreadModels
@{
    Layout = null;
    var question = ViewData["Question"] as QuestionModel;
    var answers = ViewData["Answers"] as List<AnswerModel>;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <div class="content">

        <div class="answerquestion">
            <div class="title">
                <h3>@question.Title</h3>
            </div>
            <div class="answer-userinfo">
                <h4>@question.Poster.UserName</h4>
            </div>
            <div class="answer-text">
                <p>@question.Text</p>
            </div>
        </div>

        @foreach (var ans in answers)
         {
        <div class="answer">
            <div class="answer-title">
                <h3>@ans.Title</h3>
            </div>
            <div class="answer-userinfo">
                <h4>@ans.Poster.UserName</h4>
            </div>
            <div class="answer-text">
                <p>@ans.Text</p>
            </div>
        </div>

        }

    </div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
</body>
</html>
